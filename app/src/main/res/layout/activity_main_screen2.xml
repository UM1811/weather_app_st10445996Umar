<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTemperatureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter temperature"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnAddTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Temperature" />

    <TextView
        android:id="@+id/tvAverageTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:text="No temperatures recorded" />

    <Button
        android:id="@+id/btnClearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data" />

    <Button
        android:id="@+id/btnViewDailyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Daily Details" />
</LinearLayout>
